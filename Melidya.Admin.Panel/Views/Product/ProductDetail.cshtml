@using Melidya.Admin.Panel.Models
@model ProductModel
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form asp-controller="/Admin/Product" asp-action="ProductUpdate" method="post"  enctype="multipart/form-data"> 
    <div id="page-wrapper">
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="white-box">
                    <div class="user-bg">
                        <img width="100" alt="user" src="@Model.Image">
                        <div class="overlay-box">
                            <div class="user-content">
                                <a href="javascript:void(0)"><img src="@Model.Image" class="thumb-lg img-circle" alt="img"></a>
                               

                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-8 col-xs-12">
                <div class="white-box">

                    <div class="form-group">
                        <label class="col-md-12">Ürün İsmi</label>
                        <div class="col-md-12">
                            <input value="@Model.ID" name="ID" type="hidden" />
                            <input type="text" placeholder="@Model.ProductName" class="form-control form-control-line" value="@Model.ProductName" name="ProductName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Ürün Detayı</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Model.ProductDetail" class="form-control form-control-line" name="ProductDetail" id="example-email" value="@Model.ProductDetail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Resim</label>
                        <div class="col-md-12">
                            <input type="file" placeholder="@Model.Image" class="form-control form-" name="file" id="file" value="@Model.Image">
                            @*<img src="@Model.Image" alt="Alternate Text" class="profile-user-img img-responsive img-circle" />*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Kategori</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Model.CategoryID" class="form-control form-control-line" name="CategoryID" id="example-email" value="@Model.CategoryID">
                        </div>
                    </div>
                    <button class="btn btn success" type="submit">Düzenle</button>
                    <a href="/Admin/Product/ProductDelete/@Model.ID" class="btn btn-danger">Sil</a>

                </div>
            </div>
        </div>
    </div>

    </form>