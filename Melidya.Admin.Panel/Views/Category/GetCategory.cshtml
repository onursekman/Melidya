@using Melidya.Admin.Panel.Models
@model List<CategoryModel>
@{
    ViewData["Title"] = "GetCategory";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
          
                    <a href="/Admin/Category/CategoryInsert" class="btn btn-success">Kategori Ekle</a>
                    <div class="table-responsive">
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="txt-oflo">@item.CategoryName</td>
                                        <td>@item.Image</td>
                                        <td><a href="/Admin/Category/CategoryUpdate/@item.CategoryID" class="btn btn-success">Düzenle</a> </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>