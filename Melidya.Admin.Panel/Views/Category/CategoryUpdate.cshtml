@using Melidya.Admin.Panel.Models
@model CategoryModel
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
    <div id="page-wrapper">
        <div class="row">
            <br />
            <div class="col-md-4 col-xs-12">
                <div class="white-box">
                    <div class="user-bg">
                        <img width="100" alt="user" src="@Model.Image">
                        <div class="overlay-box">
                            <div class="user-content">
                                <a href="javascript:void(0)"><img src="@Model.Image" class="thumb-lg img-circle" alt="img"></a>
                                <h4 class="text-white">@Model.CategoryName</h4>

                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-8 col-xs-12">
                <div class="white-box">
                    <form asp-controller="/Admin/Category" asp-action="CategoryUpdate" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-md-12">Kategori İsmi</label>
                            <div class="col-md-12">
                                <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                                <input type="text" placeholder="@Model.CategoryName" class="form-control form-control-line" name="CategoryName" value="@Model.CategoryName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Kategori Resmi</label>
                            <div class="col-md-12">
                                <input type="file" placeholder="@Model.Image" class="form-control form-control-line" name="file" id="file" value="@Model.Image">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Güncele</button>
                        <a href="/Admin/Category/CategoryDelete/@Model.CategoryID" class="btn btn-danger">Sil</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
