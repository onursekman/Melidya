@using MelidyaUI.Models
@model List<CategoryModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Kategorilerimiz.</h2>
                <p class="flip"><span class="deg1"></span><span class="deg2"></span><span class="deg3"></span></p>
                
            </div>
        </div>
        <div class="row">
            @foreach (CategoryModel item in Model)
            {
                <div class="col-lg-3 d-flex mb-sm-4 ftco-animate">
                    <div class="staff">
                        <div class="img mb-4" style="background-image: url(@item.Image);"></div>
                        <div class="info text-center">
                            <h3><a href="/Product/Index/@item.CategoryID">@item.CategoryName</a></h3>
                            <span class="position">Melidya Çikolata</span>
                            <div class="text">
                                <p>@item.CategoryDetail</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
